@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor MODEL_COLOR
skinparam classBackgroundColor MODEL_COLOR

Package Model as ModelPackage <<Rectangle>>{
Class "<<interface>>\nReadOnlyAddressBook" as ReadOnlyAddressBook
Class "<<interface>>\nReadOnlyUserPrefs" as ReadOnlyUserPrefs
Class "<<interface>>\nModel" as Model
Class AddressBook
Class ModelManager
Class UserPrefs

Class UniquePersonList
Class Person

Class PersonXYZProperties
Class IdentityNumber

Class UniqueAppointmentList
Class Appointment

Class AppointmentXYZProperties

Class I #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Model

AddressBook .up.|> ReadOnlyAddressBook

ModelManager .up.|> Model
Model .right.> ReadOnlyUserPrefs
Model .left.> ReadOnlyAddressBook
ModelManager -left-> "1" AddressBook
ModelManager -right-> "1" UserPrefs
UserPrefs .up.|> ReadOnlyUserPrefs

AddressBook *--> "1" UniquePersonList
AddressBook *--> "1" UniqueAppointmentList
UniquePersonList -down-> "~* all" Person
UniqueAppointmentList -down-> "~* all" Appointment
Person *--> "1" IdentityNumber
Person *--> "all" PersonXYZProperties

Appointment *--> "1" IdentityNumber
Appointment *--> "all" AppointmentXYZProperties

ModelManager --> "~* filtered" Person
ModelManager --> "~* filtered and sorted" Appointment


Person -[hidden]down--> I
UniquePersonList -[hidden]right-> I
Appointment -[hidden]down--> I
Appointment -[hidden]left--> Person

PersonXYZProperties -[hidden]right-> IdentityNumber
AppointmentXYZProperties -[hidden]left-> IdentityNumber


@enduml